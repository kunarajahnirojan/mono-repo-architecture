{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mono-repo-architecture/assets": ["libs/assets/src/index.ts"],
      "@mono-repo-architecture/components/base": [
        "libs/components/base/src/index.ts"
      ],
      "@mono-repo-architecture/components/shared": [
        "libs/components/shared/src/index.ts"
      ],
      "@mono-repo-architecture/config": ["libs/config/src/index.ts"],
      "@mono-repo-architecture/constants": ["libs/constants/src/index.ts"],
      "@mono-repo-architecture/feature": ["libs/customer/feature/src/index.ts"],
      "@mono-repo-architecture/layouts": ["libs/layouts/src/index.ts"],
      "@mono-repo-architecture/providers": ["libs/providers/src/index.ts"],
      "@mono-repo-architecture/router": ["libs/router/src/index.ts"],
      "@mono-repo-architecture/shared/types": [
        "libs/shared/types/src/index.ts"
      ],
      "@mono-repo-architecture/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@mono-repo-architecture/shared/utils": [
        "libs/shared/utils/src/index.ts"
      ],
      "@mono-repo-architecture/ui": ["libs/customer/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
